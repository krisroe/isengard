<Configuration defaultrealm="wind" defaultweapon="claw" level="12" totalhp="59" totalmp="61" healtickmp="7" preferredalignment="Blue" username="despug" startupcommands="remove all;score">
 <Variables>
  <Variable name="weapon" type="string" value=""/>
  <Variable name="movegapms" type="int" value="265"/>
  <Variable name="polltickinterval" type="int" value="5000" min="0"/>
  <Variable name="castinterval" type="int" value="2550" min="0"/>
  <Variable name="castrounds" type="int" value="0" min="0"/>
  <Variable name="stuncastrounds" type="int" value="2" min="0"/>
  <Variable name="hitandrundirection" type="string"/>
  <Variable name="hitandrunprecommand" type="string"/>
  <Variable name="attacktype" type="string" value="attack"/>
 </Variables>
 <Macros>
  <Macro name="C*" oneclick="true" combatcommandtypes="Magic,Melee" finalcommand="remove {weapon}" finalcommandcondition="weapon">
   <Steps>
    <Command text="wield {weapon}" waitms="0" condition="weapon"/>
    <SetNextCommandMS waitms="0"/>
    <Sequence loop="true">
     <Steps>
      <ManaOffensive waitms="castinterval"/>
      <Command text="{attacktype} {mob}" waitms="0" condition="weapon"/>
      <SetVariable variable="attacktype" value="attack"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="SC*" oneclick="true" setparentlocation="true" combatcommandtypes="Magic,Melee" finalcommand="remove {weapon}" finalcommandcondition="weapon">
   <Steps>
    <Command text="wield {weapon}" waitms="0" condition="weapon"/>
    <Command text="{hitandrunprecommand}" condition="hitandrunprecommand"/>
    <Command text="go {hitandrundirection}" condition="hitandrundirection"/>
    <ManaStun waitms="0"/>
    <Command text="{attacktype} {mob}" waitms="0" condition="weapon"/>
    <SetVariable variable="attacktype" value="attack"/>
    <Sequence loop="true">
     <Steps>
      <ManaOffensive waitms="castinterval"/>
      <Command text="{attacktype} {mob}" waitms="0" condition="weapon"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="SCCSC*" oneclick="true" setparentlocation="true" combatcommandtypes="Magic,Melee" finalcommand="remove {weapon}" finalcommandcondition="weapon" finalcommand2="look {mob}">
   <Steps>
    <Command text="wield {weapon}" waitms="0" condition="weapon"/>
    <Command text="{hitandrunprecommand}" condition="hitandrunprecommand"/>
    <Command text="go {hitandrundirection}" condition="hitandrundirection"/>
    <ManaStun waitms="0"/>
    <Command text="{attacktype} {mob}" waitms="0" condition="weapon"/>
    <SetVariable variable="attacktype" value="attack"/>
    <Sequence loop="2">
     <Steps>
      <ManaOffensive waitms="castinterval"/>
      <Command text="{attacktype} {mob}" waitms="0" condition="weapon"/>
     </Steps>
    </Sequence>
    <ManaStun waitms="castinterval"/>
    <Command text="{attacktype} {mob}" waitms="0" condition="weapon"/>
    <Sequence loop="true">
     <Steps>
      <ManaOffensive waitms="castinterval"/>
      <Command text="attack {mob}" waitms="0" condition="weapon"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="A*" oneclick="false" combatcommandtypes="Melee" finalcommand="remove {weapon}">
   <Steps>
    <Command text="wield {weapon}" waitms="0"/>
    <SetNextCommandMS waitms="0"/>
    <Sequence loop="true">
     <Steps>
      <Command text="attack {mob}" waitms="castinterval"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <!--
  <Macro name="cast+atk+potX" oneclick="false" combatcommandtypes="Magic,Melee,Potions">
   <Steps>
    <Sequence loop="castrounds">
     <Steps>
      <Command text="cast {realm2spell} {mob}" waitms="castinterval"/>
      <Command text="kill {mob}" waitms="0"/>
      <Command text="drink {potion}" skiprounds="1" waitms="0"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  -->
 </Macros>
</Configuration>