<Configuration>
 <Variables>
  <Variable name="spelllevel" type="int" value="2" min="1" max="2"/>
  <Variable name="polltickinterval" type="int" value="5000" min="0"/>
  <Variable name="castinterval" type="int" value="2450" min="0"/>
  <Variable name="fighthitrounds" type="int" value="3" min="1"/>
 </Variables>
 <Macros>
  <Macro name="castX" oneclick="true">
   <Steps>
    <Command text="cast {realm{spelllevel}spell} {mob}" waitms="castinterval" loop="fighthitrounds"/>
   </Steps>
  </Macro>
  <Macro name="cast+atkX" oneclick="true">
   <Steps>
    <Sequence loop="fighthitrounds">
     <Steps>
      <Command text="cast {realm{spelllevel}spell} {mob}" waitms="castinterval"/>
      <Command text="kill {mob}" waitms="0"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="polltick" oneclick="true">
   <Steps>
    <Command text="" waitms="polltickinterval" loop="true"/>
   </Steps>
  </Macro>
 </Macros>
</Configuration>