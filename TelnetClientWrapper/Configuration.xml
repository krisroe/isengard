<Configuration>
 <Variables>
  <Variable name="movegapms" type="int" value="260"/>
  <Variable name="polltickinterval" type="int" value="5000" min="0"/>
  <Variable name="castinterval" type="int" value="2550" min="0"/>
  <Variable name="level2castrounds" type="int" value="3" min="0"/>
  <Variable name="level1castrounds" type="int" value="0" min="0"/>
  <Variable name="hitandrundirection" type="string"/>
 </Variables>
 <Macros>
  <Macro name="castX" oneclick="true">
   <Steps>
    <Command text="cast {realm2spell} {mob}" waitms="castinterval" loop="level2castrounds"/>
    <Command text="cast {realm1spell} {mob}" waitms="castinterval" loop="level1castrounds"/>
   </Steps>
  </Macro>
  <Macro name="cast+atkX" oneclick="true">
   <Steps>
    <Sequence loop="level2castrounds">
     <Steps>
      <Command text="cast {realm2spell} {mob}" waitms="castinterval"/>
      <Command text="kill {mob}" waitms="0"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="cast+atk+potX" oneclick="true">
   <Steps>
    <Sequence loop="level2castrounds">
     <Steps>
      <Command text="cast {realm2spell} {mob}" waitms="castinterval"/>
      <Command text="kill {mob}" waitms="0"/>
      <Command text="drink {potion}" skiprounds="1" waitms="0"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="hitandflee" oneclick="true">
   <Steps>
    <Command text="go {hitandrundirection}"/>
    <Command text="cast {realm2spell} {mob}" waitms="movegapms"/>
    <Command text="flee" waitms="castinterval"/>
   </Steps>
  </Macro>
  <Macro name="polltick" oneclick="true">
   <Steps>
    <Command text="" waitms="polltickinterval" loop="true"/>
   </Steps>
  </Macro>
 </Macros>
</Configuration>