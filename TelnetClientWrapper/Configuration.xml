<Configuration>
 <Variables>
  <Variable name="polltickinterval" type="int" value="5000"/>
  <Variable name="castinterval" type="int" value="2400"/>
  <Variable name="castloop" type="int" value="4"/>
 </Variables>
 <Macros>
  <Macro name="castX" oneclick="true">
   <Steps>
    <Sequence loop="castloop">
     <Steps>
      <Command text="cast {realm2spell} {mob}" waitms="castinterval"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
  <Macro name="polltick" oneclick="true">
   <Steps>
    <Sequence loop="true">
     <Steps>
      <Command text="" waitms="polltickinterval"/>
     </Steps>
    </Sequence>
   </Steps>
  </Macro>
 </Macros>
</Configuration>